<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= value %>
   </div>
<% end %>
<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>


  <h3>Details for <%= @request.title %> </h3>
  <p><%=@high_impact_msg%></p>

  <li class="requests">
    Title: <%= @request.title %><br />
    <li>
    Request Language: <%= @request.from_language %><br />
    <li>
    Translation Language: <%= @request.to_language %><br />
    <li>
    Status: <%= @request._status %><br />
    <li>
    Categories: <%= @request.categories %><br />
    <li>
    Description: <%= @request.description %>
    <li>
    Deadline: <%= @request.deadline %>
  </li>
  <li>Format: <%= @request.document_format %></li>
  <% if @request.document_format=="text"%>
    <li><%= "Document Text: " + @request.document_text %></li>
  <% else %>
    <li> Document Files:</li>
    <% @request.document_uploads.each do |file| %>
      <li><%= link_to(file.filename, file, target: "_blank") %></li>
    <% end %>
  <% end %>

<%= button_to "All Requests", requests_path, action: "index", method: :get %>
<%= button_to "Delete Request", delete_request_path(request_id: @request.id), request_id: @request.id, action: "delete", method: :delete, data: { confirm: 'Are you sure you want to delete this request?', title: 'Confirm Request Deletion', commit: 'YES', cancel: 'NO'} %>
