<p id="notice"><%= flash[:notice] %></p>
<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>


<div class="container">
  <div class="fix-center">
    <div class="page-header-container" >
      <% if @status.to_i == 0 %>
        <h2 class="page-header-title" >Your Pending Requests</h2>
      <% else %>
        <h2 class="page-header-title" >Your Completed Requests</h2>
      <% end%>
    </div>
  </div>
   

  <div class="row justify-content-md-center" style="margin-top: 70px">
    <div class="col-md-3">
      <div class="filter-cont">
        <% if @status.to_i == 0 %>
        <span class="button-bold"> 
          <%= link_to "Pending Translations", requests_path(status: 0) %>
        </span><br/>
        <span class=""> <%= link_to "Completed Translations", requests_path(status: 1) %> </span><br/>
      <% else %>
        <span class=""> 
          <%= link_to "Pending Translations", requests_path(status: 0) %>
        </span><br/>
        <span class="button-bold"> <%= link_to "Completed Translations", requests_path(status: 1) %> </span><br/>
      <% end %>
       <%= link_to "New Request", new_request_path, action: "new", method: :get, id: "new_request_button" %>
      </div>
    </div>

    <div class="col-md-9">
      <% @requests.each do |request| %>
          <div class="requests-card mg-top-15" id="request_<%=request.id%>">
            <div class="spread">
              <h4 class="card-title">
                <%= request.title %>
              </h4>
              <p class="lead-no-margin card-subs pad-top-5"> 
                  <span class="blue">Deadline: </span><%= request.deadline.to_s[0..10] %>
              </p>
            </div>
            <p class="langs card-subs"> 
                <%= request.from_language %>
                <i class="fa fa-arrow-right sm"></i>
                <%=request.to_language %>
            </p>
            <p class="card-text">
              <%= request.description %><br />
            </p>
            <div class="card-row">
              <div class="card-col-1">
                <div class="tags-container">
                  <% if request.categories%>
                    <% request.categories.each do |c| %>
                      <span class="tag tag-blue"><%= "#{c}" %></span>
                    <% end %>
                  <%end%>
                  <% if request._status==0%>
                      <span class="tag tag-orange"> Pending</span>
                    <% elsif request._status==1 %>
                      <span class="tag tag-green"> Completed </i></span>
                    <% end %>
                </div>
              </div>
              <div class="card-col-2">
                <%= button_to "View", request_path(request_id: request.id), action: "show", method: :get, class:"btn btn-primary", style: "margin: 5px 0 0 0" %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
